    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        String uid,pass;
        uid=jTextField1.getText().trim();
        pass=String.valueOf(jPasswordField1.getPassword());
        try {
    ResultSet rs = stmt.executeQuery("SELECT * FROM logintable WHERE username='" + uid + "';");
    if (rs.next()) {
        System.out.println("login id found: " + uid + ", Password is: " + pass);
        if (pass.equals(rs.getString("password"))) {
            jLabel5.setText("Welcome " + rs.getString("username"));
     //       FuncJFrame funcFrame = new FuncJFrame(); // Assuming RegFrame is the name of your registration frame class
            //funcFrame.setVisible(true);
        // Close or hide the current login frame if needed
        // For example:
           setVisible(false); 
        } else {
            jLabel5.setText("Login/Password incorrect");
        }
    } else {
        jLabel5.setText("User ID not found");
    }
} catch (Exception e) {}
    }                                        

